#!/bin/bash
# Change the current working directory to the parent directory
cd "$(dirname "$0")"

pyinit_flag=0

for arg in "$@"
do
    if [[ $arg == --pyinit=* ]]; then
        env_path="${arg#*=}"
        source $env_path
	$pyinit_flag=1
	conda activate zbrains
    fi
done

if [[ $pyinit_flag -eq 0 ]]; then
   echo "The --pyinit argument was left empty, zbrains will use your currently active Python environment"

fi

python -m src.zbrains "$@"